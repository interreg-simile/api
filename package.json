{
  "name": "simile-api",
  "version": "1.0.0",
  "description": "A RESTFul API that powers project SIMILE applications.",
  "author": "Edoardo Pessina <edoardopessina.priv@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "main": "index.js",
  "scripts": {
    "coverage": "npm run unit -- --coverage-report=text-summary",
    "postcoverage": "tap --coverage-report=lcov --no-browser",
    "lint": "eslint . --ignore-path=.gitignore",
    "dev": "nodemon index.js",
    "start": "node index.js",
    "test": "npm run lint && npm run unit",
    "unit": "tap tests/**/*.test.js",
    "seedRois": "node scripts/seedRois.js",
    "serve:docs": "live-server --watch=./docs/ --open=./docs/temp/",
    "build:docs": "redoc-cli bundle docs/spec/openapi.yaml --output ./docs/index.html --options.hideDownloadButton"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "5.0.0",
    "express-validator": "6.7.0",
    "helmet": "3.23.3",
    "i18next": "19.8.4",
    "i18next-node-fs-backend": "^2.1.3",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "moment": "2.29.1",
    "mongoose": "5.10.17",
    "multer": "^1.4.2",
    "node-fetch": "2.6.1",
    "pino": "6.7.0",
    "proj4": "2.6.3",
    "redoc": "2.0.0-rc.47",
    "uuid": "8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@mia-platform/eslint-config-mia": "3.0.0",
    "eslint": "7.14.0",
    "live-server": "1.2.1",
    "nock": "13.0.5",
    "nodemon": "2.0.6",
    "pre-commit": "1.2.2",
    "redoc-cli": "0.10.1",
    "sinon": "9.2.1",
    "supertest": "6.0.1",
    "tap": "^14.11.0"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interreg-simile/api.git"
  },
  "bugs": {
    "url": "https://github.com/interreg-simile/api/issues"
  },
  "homepage": "https://github.com/interreg-simile/api#readme"
}
