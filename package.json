{
  "name": "simile-api",
  "version": "1.0.0",
  "description": "A RESTFul API that powers project SIMILE applications.",
  "author": "Edoardo Pessina <edoardopessina.priv@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "npm run unit",
    "unit": "tap -b tests/**/*.test.js -T",
    "seed": "babel-node src/setup/seeder.js",
    "seed:prod": "babel-node build/setup/seeder.js",
    "start:prod": "npm run build:prod && npm run start:server",
    "build:prod": "babel src -s -D -d build",
    "start:server": "node build/app.js",
    "serve:docs": "live-server --watch=./docs/ --open=./docs/temp/",
    "build:docs": "redoc-cli bundle docs/spec/openapi.yaml --output ./docs/index.html --options.hideDownloadButton"
  },
  "dependencies": {
    "@babel/runtime": "7.12.5",
    "bcryptjs": "2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "date-fns": "2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "5.0.0",
    "express-validator": "6.7.0",
    "helmet": "3.23.3",
    "i18next": "19.8.4",
    "i18next-node-fs-backend": "^2.1.3",
    "ip": "^1.1.5",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "lodash.find": "4.6.0",
    "moment": "2.29.1",
    "mongoose": "5.10.17",
    "morgan": "1.10.0",
    "multer": "^1.4.2",
    "node-fetch": "2.6.1",
    "path-to-regexp": "6.2.0",
    "pino": "6.7.0",
    "proj4": "2.6.3",
    "redoc": "2.0.0-rc.47",
    "rotating-file-stream": "2.1.3",
    "uuid": "3.4.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.12.8",
    "@babel/core": "7.12.9",
    "@babel/node": "7.12.6",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@babel/register": "7.12.1",
    "@mia-platform/eslint-config-mia": "3.0.0",
    "eslint": "7.14.0",
    "live-server": "1.2.1",
    "lorem-ipsum": "^2.0.3",
    "nodemon": "2.0.6",
    "pre-commit": "1.2.2",
    "redoc-cli": "0.10.1",
    "sinon": "9.2.1",
    "supertest": "6.0.1",
    "tap": "^14.11.0"
  },
  "eslintConfig": {
    "extends": "@mia-platform/eslint-config-mia"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interreg-simile/api.git"
  },
  "bugs": {
    "url": "https://github.com/interreg-simile/api/issues"
  },
  "homepage": "https://github.com/interreg-simile/api#readme"
}
